<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manager_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.tourneymanager.ManagerModeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Create Tournament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/createButton"
            android:layout_alignParentEnd="true"
            android:onClick="CreateTourneyLauncher (ManagerModeActivity)" />

        <Button
            android:text="Manage Players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp"
            android:id="@+id/managePlayersButton"
            android:layout_alignParentEnd="true"
            android:onClick="ManagePlayersLauncher (ManagerModeActivity)" />

        <Button
            android:text="View Player Totals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/managePlayersButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:id="@+id/playerTotalsButton"
            android:layout_alignParentEnd="true"
            android:onClick="PlayerTotalsLauncher (ManagerModeActivity)" />

        <Button
            android:text="View Tournament Totals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTotalsButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="41dp"
            android:id="@+id/TourneyTotalsButton"
            android:layout_alignParentEnd="true"
            android:onClick="TournamentTotalsLauncher (ManagerModeActivity)" />

        <Button
            android:text="View Rounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TourneyTotalsButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/roundsButton"
            android:layout_alignParentEnd="true"
            android:onClick="RoundsLauncher (ManagerModeActivity)" />
    </LinearLayout>

</RelativeLayout>
